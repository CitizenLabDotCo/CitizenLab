{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Schema for validating the rules object of a smart group",
  "type": "array",
  "items": {
    "oneOf": [
      {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "ruleType": {
            "type": "string",
            "enum": ["custom_field_text"]
          },
          "customFieldId": {
            "$ref": "#/definitions/uuidType"
          },
          "predicate": {
            "$ref": "#/definitions/textPredicate"
          },
          "value": {
            "type": "string"
          }
        }
      },
      {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "ruleType": {
            "type": "string",
            "enum": ["custom_field_select"]
          },
          "customFieldId": {
            "$ref": "#/definitions/uuidType"
          },
          "predicate": {
            "$ref": "#/definitions/selectPredicate"
          },
          "value": {
            "$ref": "#/definitions/uuidType"
          }
        }
      }
    ]
  },
  "definitions": {
    "ruleType": {
      "type": "string",
      "enum": ["custom_field", "email", "admin"]
    },
    "uuidType": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
    },
    "textPredicate": {
      "type": "string",
      "enum": ["is", "not_is", "contains", "not_contains", "begins_with", "not_begins_with", "ends_on", "not_ends_on", "is_empty", "not_is_empty"]
    },
    "selectPredicate": {
      "type": "string",
      "enum": ["has_value", "not_has_value", "is_empty", "not_is_empty"]
    }
  }
}
