  },
  "definitions": {
    "multiloc_string": {
      "type": "object",
      "properties": {
        <%= I18n.available_locales.map{|l| "\"#{l.to_s}\": {\"type\": \"string\"}"}.join(",") %>
      }
    },
    "feature": {
      "type": "Object",
      "required": ["allowed","enabled"],
      "properties": {
        "allowed": {
          "type": "boolean"
        },
        "enabled": {
          "type": "boolean"
        }
      }
    }
  }
