{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Schema for validating the roles of a user",
  "type": "array",
  "uniqueItems": true,
  "items": {
    "oneOf": [
      {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["admin"]
          }
        }
      },
      {
        "type": "object",
        "required": ["type", "lab_id"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["lab_moderator"]              
          },
          "lab_id": {
            "type": "string"
          }
        }
      }
    ]
  }
}
