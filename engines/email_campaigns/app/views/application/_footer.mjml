<mj-section full-width="full-width" background-color="#F6F6F6" padding="40px 25px">
  <mj-column>
    <mj-text padding-bottom="20px">
    <% @unsubscribe_url = @url_service.unsubscribe_url @tenant, @campaign.id, @user.id %>
      <a href="<%= @unsubscribe_url %>"
        style="color: #84939E;text-decoration: none; margin-right: 10px;"><%= formatMessage('link_unsubscribe', fragment: 'footer') %></a>
      |
      <a href="<%= @url_service.terms_conditions_url tenant: @tenant %>"
        style="color: #84939E;text-decoration: none; margin: 0 10px;"><%= formatMessage('link_terms_conditions', fragment: 'footer') %></a>
      |
      <a href="<%= @url_service.privacy_policy_url tenant: @tenant %>"
        style="color: #84939E;text-decoration: none; margin-left: 10px;"><%= formatMessage('link_privacy_policy', fragment: 'footer') %></a>
    </mj-text>
    <mj-text color="#84939E" padding-bottom="20px">
      <p style="font-size: 12px;">
        <%= formatMessage('statement', fragment: 'footer', escape_html: false, values: {
          organizationName: localize(@tenant.settings.dig('core','organization_name')),
          organizationLink: "<a href='#{@url_service.home_url(tenant: @tenant, locale: @locale)}' style='color: #84939E; text-decoration: underline;'>#{@tenant.host}</a>",
          unsubscribeLink: "<a href='#{@unsubscribe_url}' style='color: #84939E; text-decoration: underline;'>#{formatMessage('unsubscribe_text', fragment: 'footer')}</a>"
        }) %>
      </p>
    </mj-text>
    <mj-text color="#84939E">
      <span style="font-style: italic; 
                    font-weight: bold;
                    font-size: 12px;
                    display: inline-block;
                    margin-bottom: 10px"><%= formatMessage('powered_by', fragment: 'footer') %></span>
    </mj-text>
    <mj-image align="left" width="155px" padding-top="0" href="https://www.citizenlab.co/"
      src="https://res.cloudinary.com/citizenlabco/image/upload/v1593689890/logo-email-x2_wbnwkf.png" alt="CitizenLab logo" />
  </mj-column>
</mj-section>