{
  "compilerOptions": {
    "rootDir": "app",
    "baseUrl": "app",
    "mapRoot": "app",
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "plugins": [{
      "name": "typescript-styled-plugin"
    }]
  },
  "files": [
    "custom.d.ts"
  ],
  "include": [
    "app/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.tsx",
    "**/*.test.ts"
  ]
}
