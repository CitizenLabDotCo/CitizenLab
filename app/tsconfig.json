{
  "compilerOptions": {
    "baseUrl": "",
    "module": "esnext",
    "declaration": false,
    "jsx": "react",
    "lib": ["es7", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "strictFunctionTypes": false,
    "mapRoot": "./",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es5",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [{
      "name": "typescript-styled-plugin"
    }]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "internals",
    "server",
    "e2e",
    "docs",
    ".git",
    ".vscode"
  ],
  "types": [
    "typePatches"
  ]
}
